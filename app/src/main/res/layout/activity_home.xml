<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".CreatePostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        tools:context=".HomeActivity"
        android:layout_margin="10dp"
        >

        <Button
            android:id="@+id/btnLogout"
            android:background="@drawable/red_round"
            android:backgroundTint="@color/colorPrimary"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"/>

        <ImageView

            android:id="@+id/homeImageUri"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Welcome!" />

        <TextView
            android:id="@+id/txtUserIdHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Id number" />

        <TextView
            android:id="@+id/txtFirstNameHome"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Currently Most Popular Services"
            android:textStyle="bold"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/subcategoryHomePHP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/subcategoryImageHome"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"

                        android:src="@android:drawable/toast_frame" />

                    <TextView
                        android:id="@+id/subcategoryNameHome"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@+id/subcategoryImageHome"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-50dp"
                        android:autoSizeMaxTextSize="15sp"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:text="PHP" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/subcategoryHomeJAVA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/subcategoryImageHome2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/toast_frame" />

                    <TextView
                        android:id="@+id/subcategoryNameHome2"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@+id/subcategoryImageHome2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-50dp"
                        android:autoSizeMaxTextSize="15sp"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:text="JAVA" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/subcategoryHomeMobileApps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/subcategoryImageHome3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/toast_frame" />

                    <TextView
                        android:id="@+id/subcategoryNameHome3"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@+id/subcategoryImageHome3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-50dp"
                        android:autoSizeMaxTextSize="15sp"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:text="MobileApps" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/subcategoryHomeLogoDesign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/subcategoryImageHome4"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/toast_frame" />

                    <TextView
                        android:id="@+id/subcategoryNameHome4"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@+id/subcategoryImageHome4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-50dp"
                        android:autoSizeMaxTextSize="15sp"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:text="Logo Design" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/subcategoryHomeIllustration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/subcategoryImageHome5"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/toast_frame" />

                    <TextView
                        android:id="@+id/subcategoryNameHome5"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@+id/subcategoryImageHome5"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-50dp"
                        android:autoSizeMaxTextSize="15sp"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:text="Illustration" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/subcategoryHomeWebDesign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/subcategoryImageHome6"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/toast_frame" />

                    <TextView
                        android:id="@+id/subcategoryNameHome6"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@+id/subcategoryImageHome6"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-50dp"
                        android:autoSizeMaxTextSize="15sp"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:text="Logo Design" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/subcategoryHomeProducer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/subcategoryImageHome7"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/toast_frame" />

                    <TextView
                        android:id="@+id/subcategoryNameHome7"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@+id/subcategoryImageHome7"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-50dp"
                        android:autoSizeMaxTextSize="15sp"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:text="Producer" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/subcategoryHomeVoiceOver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/subcategoryImageHome8"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/toast_frame" />

                    <TextView
                        android:id="@+id/subcategoryNameHome8"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@+id/subcategoryImageHome8"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-50dp"
                        android:autoSizeMaxTextSize="15sp"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:text="Voice Over" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/subcategoryHomeMixing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/subcategoryImageHome9"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/toast_frame" />

                    <TextView
                        android:id="@+id/subcategoryNameHome9"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@+id/subcategoryImageHome9"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-50dp"
                        android:autoSizeMaxTextSize="15sp"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:text="Mixing" />
                </RelativeLayout>

            </LinearLayout>

        </HorizontalScrollView>


        <Button
            android:id="@+id/btnBecomeFreelancer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Become A Freelancer"
            android:background="@drawable/red_round"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnExploreFreelancer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explore All Freelancer Services"
            android:background="@drawable/red_round"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="10dp"/>


        <Button
            android:id="@+id/btnExploreCategory1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Programming And Tech"
            android:background="@drawable/red_round"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnExploreCategory2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Graphics and Design"
            android:background="@drawable/red_round"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="10dp"/>


        <Button
            android:id="@+id/btnExploreCategory3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Music and Audio"
            android:background="@drawable/red_round"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnUpdatePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Your Post"
            android:background="@drawable/red_round"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnFavJobPosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorite Job Posts"
            android:background="@drawable/red_round"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnInbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inbox"
            android:background="@drawable/red_round"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="10dp"/>



    </LinearLayout>

</ScrollView>