<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".CreatePostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <EditText

            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Job Title" />

        <TextView
            android:gravity="center"
            android:textSize="18sp"
            android:id="@+id/select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Category"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/help_title_gest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="toggle_contents"
                android:text="Programming and Tech"/>


            <!--content to hide/show -->




            <RadioGroup
                android:id="@+id/txt_help_gest"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/rButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="PHP" />

                <RadioButton
                    android:id="@+id/rButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="JAVA" />

                <RadioButton
                    android:id="@+id/rButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Mobile Apps" />
            </RadioGroup>

            <Button
                android:id="@+id/help_title_gest1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="toggle_contents1"
                android:text="Graphics and Design"/>
            <RadioGroup
                android:id="@+id/txt_help_gest1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/rButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Logo Design" />

                <RadioButton
                    android:id="@+id/rButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Illustration" />

                <RadioButton
                    android:id="@+id/rButton6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Web Design" />
            </RadioGroup>


            <Button
                android:id="@+id/help_title_gest2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="toggle_contents2"
                android:text="Music and Audio"
                />

            <RadioGroup
                android:id="@+id/txt_help_gest2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/rButton7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Producers" />

                <RadioButton
                    android:id="@+id/rButton8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Voice Over" />

                <RadioButton
                    android:id="@+id/rButton9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Mixing" />
            </RadioGroup>



        </LinearLayout>


        <!-- activity_info layout file -->
        <!-- Clickable title -->


        <EditText

            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Describe What You Can Offer" />

        <EditText

            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Enter Price" />

        <EditText

            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter Your Location" />

        <Button
            android:id="@+id/btnPostGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Select Job Post Picture" />

        <ImageView
            android:id="@+id/postGallery"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/btnCreateJobPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Post Your Job" />


    </LinearLayout>
</ScrollView>