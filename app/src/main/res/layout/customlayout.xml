<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/jobPostTitle1"
        android:textSize="10sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:hint="title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/jobPostCategory1"
        android:layout_below="@id/jobPostTitle1"
        android:textSize="10sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:hint="category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/jobPostSubCategory1"
        android:layout_below="@id/jobPostCategory1"
        android:textSize="10sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:hint="subcategory"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/jobPostDescription1"
        android:layout_below="@id/jobPostSubCategory1"
        android:textSize="10sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:hint="Description"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/jobPostPrice1"
        android:layout_below="@id/jobPostDescription1"
        android:textSize="10sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:hint="Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/jobPostLocation1"
        android:layout_below="@id/jobPostPrice1"
        android:textSize="10sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:hint="location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/jobPostDateAdded1"
        android:layout_below="@id/jobPostLocation1"
        android:textSize="10sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:hint="date added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/jobPostImage1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/jobPostTitle1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="-153dp"
        app:srcCompat="@mipmap/ic_launcher" />

</RelativeLayout>